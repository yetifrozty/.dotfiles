format-background = ${colors.transparency}
format-foreground = ${colors.nord-0}


;format-suffix = ""
;format-suffix-background = ${colors.transparency}
;format-suffix-foreground = ${colors.nord-0}

label-background = ${colors.background}
[module/filesystem]
;inherit = margin
