[colors]
nord-0 = #e02E3440
nord-1 = #3B4252
nord-2 = #434C5E
nord-3 = #4C566A

snow-0 = #D8DEE9
snow-1 = #E5E9F0
snow-2 = #ECEFF4

red = #BF616A
orange = #D08770
yellow = #EBCB8B
green = #A3BE8C
purple = #B48EAD

blue = #5E81AC
lightblue = #88C0D0
lightgreen = #8FBCBB

background = ${colors.nord-0}
foreground = ${colors.snow-0}
disabled = ${colors.nord-3}
transparency = #00000000

[bar/mybar]
width = 100%
height = 36
radius = 18


monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 4
