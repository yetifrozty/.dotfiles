; tray-position = right

; wm-restack = generic
wm-restack = bspwm
; wm-restack = i3

; override-redirect = true

[module/media]
type = custom/ipc


format-foreground = ${colors.green}

hook-0 = $HOME/.config/polybar/media.py
initial = 1


[margin]
format-prefix = " "
format-suffix = " "
format-prefix-background = ${colors.background}
format-suffix-background = ${colors.background}

[module/bspwm]
;inherit = margin
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = false

format = "<label-state>"

label-focused-padding = 1
